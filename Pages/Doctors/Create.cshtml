@page
@model HospitalManagementSystem.Pages.Doctors.CreateModel
@{
    ViewData["Title"] = "Add Doctor";
}

<h1>Add Doctor</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Doctor.Name"></label>
        <input asp-for="Doctor.Name" class="form-control" />
        <span asp-validation-for="Doctor.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Doctor.Specialization"></label>
        <select asp-for="Doctor.Specialization" class="form-control" asp-items="Model.Specializations">
            <option value="">-- Select Specialization --</option>
        </select>
        <span asp-validation-for="Doctor.Specialization" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Doctor.Experience"></label>
<input asp-for="Doctor.Experience" class="form-control" />
<span asp-validation-for="Doctor.Experience" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Doctor.Email"></label>
        <input asp-for="Doctor.Email" class="form-control" />
        <span asp-validation-for="Doctor.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Doctor.Password"></label>
        <input asp-for="Doctor.Password" class="form-control" type="password" />
        <span asp-validation-for="Doctor.Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success mt-3">Save</button>
    <a asp-page="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
