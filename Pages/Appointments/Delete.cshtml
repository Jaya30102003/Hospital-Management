@page "{id:guid}"
@model HospitalManagementSystem.Pages.Appointments.DeleteModel
@{
    ViewData["Title"] = "Delete Appointment";
}

<h2 class="text-danger">Delete Appointment</h2>

<p>Are you sure you want to permanently delete this appointment?</p>

<div class="card mt-3 mb-4">
    <div class="card-body">
        <p><strong>Patient:</strong> @Model.Appointment.Patient?.Name</p>
        <p><strong>Doctor:</strong> @Model.Appointment.Doctor?.Name</p>
        <p><strong>Date & Time:</strong> @Model.Appointment.TimeSlot.ToString("f")</p>
        <p><strong>Reason:</strong> @Model.Appointment.Reason</p>
        <p><strong>Status:</strong> 
            @(Model.Appointment.IsCancelled ? "Cancelled" : 
              Model.Appointment.IsApproved ? "Approved" : "Pending")
        </p>
    </div>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger me-2">Yes, Delete</button>
    <a asp-page="Index" class="btn btn-secondary">No, Go Back</a>
</form>
