@page "{id:guid}"
@model HospitalManagementSystem.Pages.Appointments.DeleteModel
@{
    ViewData["Title"] = "Delete Appointment";
}

<h3 class="text-danger">Are you sure you want to delete this appointment?</h3>
<p><strong>Patient:</strong> @Model.Appointment.Patient?.Name</p>
<p><strong>Doctor:</strong> @Model.Appointment.Doctor?.Name</p>
<p><strong>Time:</strong> @Model.Appointment.TimeSlot.ToString("f")</p>

<form method="post">
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
